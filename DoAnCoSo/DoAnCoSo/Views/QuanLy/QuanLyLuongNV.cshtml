@model IEnumerable<DoAnCoSo.Models.BangLuong>

@{
    ViewData["Title"] = "QuanLuongNV";
    Layout = "~/Views/Shared/_LayoutQL.cshtml";
}

<h1>Danh Sách Lương Nhân Viên</h1>

<br />
<a class="btn btn-primary" asp-action="CreateLuongNV">Thêm Lương Cho Nhân Viên</a>
<br />
<br />
<br />
<table class="table table-bordered">
    <thead>
        <tr class="table-warning">
            <th>
                Tên Nhân Viên
            </th>
            <th>
                Chức Vụ
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NgayQD)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LuongThoaThuan)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr class="table-success">
                <td>
                    @Html.DisplayFor(modelItem => item.NhanViens.TenNhanVien)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NhanViens.ChucVu.TenChucVu)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayQD)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LuongThoaThuan)
            </td>
            <td>
                <a asp-action="EditLuongNV" asp-route-id="@item.LId">Chỉnh Sửa</a> |
                <a asp-action="DeleteLuongNV" asp-route-id="@item.LId">Xóa</a>
            </td>
        </tr>
}
    </tbody>
</table>
