@model DoAnCoSo.Models.PhongBan

@{
    ViewData["Title"] = "CreatePhongBan";
    Layout = "~/Views/Shared/_LayoutQL.cshtml";
}

<h1>Tạo phòng ban</h1>
<br />
<a class="btn btn-primary" asp-controller="QuanLy" asp-action="QuanLyPhongBan">Quay Lại Danh Sách</a>
<br />
<br />
<br />
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreatePhongBan">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TenPB" class="control-label"></label>
                <input asp-for="TenPB" class="form-control" />
                <span asp-validation-for="TenPB" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MoTa" class="control-label"></label>
                <input asp-for="MoTa" class="form-control" />
                <span asp-validation-for="MoTa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

