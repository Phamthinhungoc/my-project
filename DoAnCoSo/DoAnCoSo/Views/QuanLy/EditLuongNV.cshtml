@model DoAnCoSo.Models.BangLuong

@{
    ViewData["Title"] = "EditLuongNV";
    Layout = "~/Views/Shared/_LayoutQL.cshtml";
}
<h1>Chỉnh sửa lương nhân viên</h1>
<br />
<a class="btn btn-primary" asp-controller="QuanLy" asp-action="QuanLyLuongNV">Quay Lại Danh Sách</a>
<br />
<br />
<hr />
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditLuongNV">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="LId" />
            <div class="form-group">
                <label asp-for="MaNhanVien" class="control-label"></label>
                <select asp-for="MaNhanVien" class="form-control" asp-items="ViewBag.nhanvien" ></select>
                <span asp-validation-for="MaNhanVien" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NgayQD" class="control-label"></label>
                <input type="date" asp-for="NgayQD" class="form-control" />
                <span asp-validation-for="NgayQD" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LuongThoaThuan" class="control-label"></label>
                <input asp-for="LuongThoaThuan" class="form-control" />
                <span asp-validation-for="LuongThoaThuan" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


