@model List<ManageUserRolesViewModel>
@{
    ViewData["Title"] = "Manage";
    Layout = "~/Views/Shared/_LayoutQL.cshtml";
}

<br />
<a class="btn btn-primary" asp-controller="QuanLy" asp-action="QuanLyTK">Quay Lại Danh Sách</a>
<br />
<br />
<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Quản lý vai trò</h2>
            <br />
              Tài khoản: @ViewBag.UserName.
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model[i].RoleId" />
                    <input type="hidden" asp-for="@Model[i].RoleName" />
                    <input asp-for="@Model[i].Selected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model[i].Selected">
                        @Model[i].RoleName
                    </label>
                </div>
            }
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            <input type="submit" value="Cập Nhật" class="btn btn-primary"
                   style="width:auto" />
        </div>
    </div>
</form>

